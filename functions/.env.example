# ============================================================================
# Backend Environment Variables (.env)
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# ----------------------------------------------------------------------------
# Google Cloud Project Configuration
# ----------------------------------------------------------------------------
GOOGLE_CLOUD_PROJECT_ID=ttb-label-checker
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# ----------------------------------------------------------------------------
# Firebase Configuration
# ----------------------------------------------------------------------------
FIREBASE_STORAGE_BUCKET=ttb-label-checker.appspot.com

# ----------------------------------------------------------------------------
# OCR Configuration
# ----------------------------------------------------------------------------
# Minimum confidence threshold for OCR text detection (0.0 - 1.0)
OCR_CONFIDENCE_THRESHOLD=0.7

# ----------------------------------------------------------------------------
# Application Configuration
# ----------------------------------------------------------------------------
# Maximum image size in bytes (10MB default)
MAX_IMAGE_SIZE=10485760

# Supported image formats (comma-separated)
SUPPORTED_FORMATS=image/jpeg,image/png,image/webp,image/heic

# Image processing timeout in seconds
OCR_TIMEOUT=30

# ----------------------------------------------------------------------------
# Development/Debug Settings (Optional)
# ----------------------------------------------------------------------------
# Set to 'true' to enable debug logging
DEBUG=false

# Set to 'true' to use Tesseract OCR fallback
USE_TESSERACT_FALLBACK=false

# ----------------------------------------------------------------------------
# Production Deployment (Firebase Secrets)
# ----------------------------------------------------------------------------
# For production, use Firebase Secrets instead of .env file:
#
# Set secrets using Firebase CLI:
#   firebase functions:secrets:set GOOGLE_APPLICATION_CREDENTIALS
#   firebase functions:secrets:set OCR_API_KEY
#
# Access secrets in code:
#   from firebase_functions import params
#   secret_value = params.SecretParam('SECRET_NAME')
#
# See: https://firebase.google.com/docs/functions/config-env#secret-manager
